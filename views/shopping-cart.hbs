{{# if products }}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
      <ul class="list-group">
        {{# each products }}
          <li class="list-group-item">
            <span class="badge">{{ this.qty }}</span>
            <strong>{{ this.item.name }}</strong>
            <span class="lable label-success">Rs.{{ this.price }}</span>
            <div class="btn-group">
              <button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" type="button">Action <span class="caret"></span></button>
              <ul class="dropdown-menu">
                <li><a href="/reduce/{{this.item._id}}">Reduce by 1</a></li>
                <li><a href="/remove/{{this.item._id}}">Remove all</a></li>
              </ul>
            </div>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
      <strong>Total: Rs. {{ totalPrice }}</strong>
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
      <a href="/buy-now" class="btn btn-success">Make Payment</a>
    </div>
  </div>
{{ else }}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
      <h2>No items found in the Cart</h2>
    </div>
  </div>
{{/if}}
