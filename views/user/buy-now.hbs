{{# if products }}
<div class="alert alert-success" role="alert">
  Thanks for ordering!!
</div>

<h2 align="center">Bill</h2>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
      <ul class="list-group">
        {{# each products }}
          <li class="list-group-item">
            <span class="badge">{{ this.qty }}</span>
            <strong>{{ this.item.title }}</strong>
            <span class="lable label-success">Rs.{{ this.price }}</span>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
      <strong>Total: Rs. {{ totalPrice }}</strong>
    </div>
  </div>

 <button onclick="myFunction()">Print this page</button>

<script>
function myFunction() {
  window.print();
}
</script>
<br>
 
{{/if}}
<a href="/">Back to Shopping</a>