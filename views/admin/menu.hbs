<div class="row">
    <br>
       <div class="w3-card-4" id="b" style="width:70%">
       <div class="w3-container w3-center"><h1>Add Items</h1> </div>  
        <div class="w3-container">
           <form  action="/admin/menu/{{rid}}" method="post">
         <div class="form-group">
                <label for="item" >Food Item</label>
                <br>
                <input type="text"  placeholder="Biryani" name="name" class="form-control" required>
            </div>
             <div class="form-group">
                <label for="price" >Price</label>
                <br>
                <input type="number" placeholder="Enter Price" name="price" class="form-control" >
            </div>
             <button id="btnAddPost"  type="submit" class="btn btn-primary">ADD</button>
            </form>
        </div>
              <br>
    <br>
    </div>
  </div>
{{# each items }}
  <div class="row">
    <br>
       <div class="w3-card-4" id="b" style="width:70%">
       <div class="w3-container w3-center"><h1>Food Menu</h1> </div>  
    {{# each this}}
        <div class="w3-container">
            <h3>{{ this.name }}</h3>
            <a href="/admin/menu-delete/{{ this._id }}">
            <div style="text-align:right">
                    <i class="fa fa-trash" aria-hidden="true"></i>
            </div>
            </a>
            Rs {{ this.price }}
        </div>
              <br>
    {{/each}}
    <br>
    </div>
  </div>
{{/each}}
